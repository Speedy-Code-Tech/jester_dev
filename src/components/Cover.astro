---
import { Icon } from "astro-icon/components";
---

<!-- Cover Photo -->
<div class="overflow-hidden">
  <img src="/cover.png" alt="Cover Photo" class="w-full h-full object-cover" />
</div>

<!-- Main Content -->
<div class="w-full px-4">
  <div
    class="w-full flex flex-col sm:flex-row justify-center sm:justify-start items-center sm:items-start"
  >
    <div
      class="w-[30%] flex justify-center items-center mt-5 sm:-mt-[40px] md:-mt-[50px] lg:-mt-[80px] z-10"
    >
      <img
        src="/profile.png"
        class="w-[100%] h-[100%] sm:w-[80%] sm:h-[80%] md:w-[100%] md:h-[100%] lg:w-[100%] lg:h-[100%]"
        alt=""
      />
    </div>
    <div
      class="w-full pt-4 flex flex-col justify-start sm:justify-center md:justify-center ps-0 md:ps-5"
    >
      <div class="profile w-full">
        <h1
          class="text-3xl sm:text-4xl text-center sm:text-start md:text-4xl lg:text-5xl font-bold text-blue-700"
        >
          JOHN JESTER HAGUPIT SALEN
        </h1>

        <p class="mt-2 text-md text-center sm:text-start sm:text-lg text-gray-700">
          Web Developer
          <span class="text-blue-600 font-bold"> → </span>
          Embedded Systems
          <span class="text-blue-600 font-bold"> → </span>
          App Developer
        </p>

        <!-- Contact Links -->
        <ul class="mt-2 space-y-1 text-base sm:text-lg">
          <li class="text-center sm:text-start">
            <a
              href="mailto:hagupitsalenjohnjester@gmail.com"
              class="inline-flex  items-center gap-3 text-md sm:text-lg hover:text-blue-600 transition"
            >
              <Icon name="mdi:email" class="w-5 h-5" />
              <span>hagupitsalenjohnjester@gmail.com</span>
            </a>
          </li>
          <li class="text-center sm:text-start">
            <a
              href="https://www.facebook.com/johnjester.salen"
              target="_blank"
              class="inline-flex items-center gap-3 text-md sm:text-lg hover:text-blue-600 transition"
            >
              <Icon name="mdi:facebook" class="w-5 h-5" />
              <span>Jester Hagupit Salen</span>
            </a>
          </li>
          <li class="text-center sm:text-start">
            <a
              href="tel:+639380831513"
              class="inline-flex items-center gap-3 text-md sm:text-lg hover:text-blue-600 transition"
            >
              <Icon name="mdi:phone" class="w-5 h-5" />
              <span>+639 380 831 513</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="mt-5 border-t-2 border-blue-600">
      <ul
        class="w-full flex flex-wrap justify-around sm:justify-around gap-8 py-5 text-lg font-semibold"
      >
        <li><a href="#home" class="hover:text-blue-600 transition">HOME</a></li>
        <li><a href="#academics" class="hover:text-blue-600 transition">ABOUT</a></li>
        <li><a href="#project" class="hover:text-blue-600 transition">PROJECTS</a></li>
        <li><a href="#contact" class="hover:text-blue-600 transition">CONTACT</a></li>
      </ul>
    </nav>

  <!-- Hero Section -->
  <section class="py-5 text-center">
      <h2 class="text-4xl sm:text-5xl md:text-5xl font-bold leading-tight">
        Bridging the Gap Between
        <span class="text-blue-600">Digital</span> &
        <span class="text-blue-600">Physical</span>
      </h2>
      <p
        class="mt-8 max-w-4xl mx-auto text-gray-600 text-lg sm:text-xl leading-relaxed px-4"
      >
        Web Development, Mobile Apps, and IoT. I deliver seamless,
        high-performance solutions that bridge the gap between software and
        hardware.
      </p>
    </section>
</div>
